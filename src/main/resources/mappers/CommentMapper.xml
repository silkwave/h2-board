<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.h2_board.mapper.CommentMapper">

    <select id="findByPostId" resultType="com.example.h2_board.entity.Comment">
        SELECT * FROM comment WHERE post_id = #{postId} ORDER BY created_at DESC
    </select>

    <insert id="insert" parameterType="com.example.h2_board.entity.Comment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment (post_id, content) VALUES (#{postId}, #{content})
    </insert>

</mapper>
