<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- PostMapper 인터페이스와 매핑되는 XML입니다. -->
<mapper namespace="com.example.h2_board.mapper.PostMapper">

    <!-- 모든 게시물을 조회하는 쿼리 -->
    <select id="findAll" resultType="com.example.h2_board.entity.Post">
        SELECT id, title, content FROM post
    </select>

    <!-- ID로 특정 게시물을 조회하는 쿼리 -->
    <select id="findById" parameterType="long" resultType="com.example.h2_board.entity.Post">
        SELECT id, title, content FROM post WHERE id = #{id}
    </select>

    <!-- 새로운 게시물을 저장하는 쿼리 -->
    <insert id="save" parameterType="com.example.h2_board.entity.Post" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post (title, content) VALUES (#{title}, #{content})
    </insert>

    <!-- 기존 게시물을 수정하는 쿼리 -->
    <update id="update" parameterType="com.example.h2_board.entity.Post">
        UPDATE post SET title = #{title}, content = #{content} WHERE id = #{id}
    </update>

    <!-- ID로 특정 게시물을 삭제하는 쿼리 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM post WHERE id = #{id}
    </delete>

</mapper>
